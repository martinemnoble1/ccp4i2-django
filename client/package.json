{
  "name": "electron-next-ts-starter",
  "type": "module",
  "main": "dist/main.js",
  "version": "0.0.1",
  "scripts": {
    "dev": "concurrently \"next dev\" \"vite --config vite.electron.config.ts\"",
    "electron-dev": "next build renderer && vite build --config vite.electron.config.ts && vite build --config vite.preload.config.tselectron && dist/main.js",
    "build": "next build renderer && vite build --config vite.electron.config.ts && vite build --config vite.preload.config.ts",
    "start": "vite build --config vite.electron.config.ts && vite build --config vite.preload.config.ts&& electron dist/main.js",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "detect-port": "^2.1.0",
    "electron-store": "^9.0.0",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jquery": "^3.7.1",
    "next": "latest",
    "react-dom": "latest",
    "url": "^0.11.4"
  },
  "devDependencies": {
    "@emotion/cache": "^11.13.1",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@monaco-editor/react": "^4.6.0",
    "@mui/icons-material": "^6.1.6",
    "@mui/material": "^6.1.6",
    "@mui/material-nextjs": "^6.1.6",
    "@mui/x-tree-view": "^7.26.0",
    "@types/chartjs": "^0.0.31",
    "@types/electron": "^1.4.38",
    "@types/express": "^5.0.1",
    "@types/jquery": "^3.5.32",
    "@types/node": "22.8.7",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@types/xml2js": "^0.4.14",
    "chart.js": "^4.4.8",
    "chartjs-plugin-annotation": "^3.1.0",
    "concurrently": "latest",
    "electron": "latest",
    "electron-builder": "^26.0.12",
    "install": "^0.13.0",
    "npm": "^11.3.0",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-resizable-panels": "^2.1.7",
    "swr": "^2.3.3",
    "typescript": "latest",
    "uuid": "^11.0.5",
    "vite": "latest",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  },
  "asarUnpack": [
    "node_modules/next"
  ],
  "build": {
    "appId": "com.example.electronnext",
    "files": [
      "dist/**",
      "renderer/.next/**",
      "renderer/public/**",
      "scripts/start-next.js"
    ],
    "extraResources": [
      {
        "from": "../server/",
        "to": "server"
      },
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "node_modules/react",
        "to": "node_modules/react",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/next",
        "to": "node_modules/next",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
